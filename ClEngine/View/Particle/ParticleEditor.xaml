<UserControl x:Class="ClEngine.View.Particle.ParticleEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:particle="clr-namespace:ClEngine.CoreLibrary.Particle"
             xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <particle:ParticleDraw x:Name="ParticleDraw"></particle:ParticleDraw>
        <GridSplitter Grid.Column="1"></GridSplitter>
        <WindowsFormsHost Grid.Column="2" MinWidth="220"
                          MaxWidth="250">
            <forms:PropertyGrid x:Name="ParticlePropertyGrid">
            </forms:PropertyGrid>
        </WindowsFormsHost>
        
    </Grid>
</UserControl>

