<Window x:Class="ClEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClEngine"
        xmlns:asset="clr-namespace:ClEngine.View.Asset"
        xmlns:particle="clr-namespace:ClEngine.View.Particle"
        xmlns:properties="clr-namespace:ClEngine.Properties"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=Command}"
        Title="CLEngine" Height="450" Width="800" Style="{StaticResource {x:Type Window}}" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="{x:Static properties:Resources.File}">
                <MenuItem Header="{x:Static properties:Resources.NewProject}" Click="MenuItem_OnClick"></MenuItem>
                <MenuItem Header="{x:Static properties:Resources.OpenProject}" Click="OpenProject_OnClick"></MenuItem>
                <MenuItem Header="{x:Static properties:Resources.SaveProject}"></MenuItem>
                <MenuItem Header="{x:Static properties:Resources.ExportProjectTemplate}"></MenuItem>
                <MenuItem Header="{x:Static properties:Resources.OpenProjectDirectory}"></MenuItem>
                <Separator />
                <MenuItem Header="{x:Static properties:Resources.BindProjectID}"></MenuItem>
                <Separator />
                <MenuItem Header="{x:Static properties:Resources.ReNameProject}"></MenuItem>
                <Separator />
            </MenuItem>
            <MenuItem Header="{x:Static properties:Resources.Edit}">
                <MenuItem Header="场景快照"></MenuItem>
            </MenuItem>
            <MenuItem Header="{x:Static properties:Resources.Display}">
                <CheckBox IsChecked="True">
                    <TextBlock Text="显示网格"></TextBlock>
                </CheckBox>
            </MenuItem>
            <MenuItem Header="{x:Static properties:Resources.Project}">
                <MenuItem Header="变量编辑器"></MenuItem>
                <MenuItem Header="插件库配置"></MenuItem>
            </MenuItem>
            <MenuItem Header="{x:Static properties:Resources.Tool}">
                <MenuItem Header="系统配置"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1" Margin="0 2 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"></ColumnDefinition>
                <ColumnDefinition Width="80"></ColumnDefinition>
                <ColumnDefinition Width="80"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Name="SaveBtn">
                <TextBlock Text="{x:Static properties:Resources.SaveScript}"></TextBlock>
            </Button>
            <Button Grid.Column="1" 
                    Click="ClearLog" 
                    Margin="2 0 0 0">
                <TextBlock Text="{x:Static properties:Resources.ClearLog}"></TextBlock>
            </Button>
            <Button Grid.Column="2" 
                    Click="RunGame" 
                    Margin="2 0 0 0">
                <TextBlock Text="{x:Static properties:Resources.RunGame}"></TextBlock>
            </Button>
        </Grid>
        <TabControl Grid.Row="2" Margin="0 2 0 0" Name="TabControl">
            <TabItem Header="{x:Static properties:Resources.Map}">
                <local:MapEditor DataContext="{Binding}"></local:MapEditor>
            </TabItem>
            <TabItem Header="{x:Static properties:Resources.Interface}">
                <local:UiEditor DataContext="{Binding}"></local:UiEditor>
            </TabItem>
            <TabItem Header="{x:Static properties:Resources.Script}">
                <local:ScriptWindow DataContext="{Binding}"></local:ScriptWindow>
            </TabItem>
            <TabItem Header="{x:Static properties:Resources.Resource}">
                <asset:ResourceView DataContext="{Binding}"></asset:ResourceView>
            </TabItem>
            <TabItem Header="{x:Static properties:Resources.Particle}">
                <particle:ParticleEditor DataContext="{Binding}"></particle:ParticleEditor>
            </TabItem>
            <TabItem Header="{x:Static properties:Resources.HelpDocument}">
                <local:HelpDocument DataContext="{Binding}"></local:HelpDocument>
            </TabItem>
        </TabControl>

        <TabControl Grid.Row="3" MaxHeight="120">
            <TabItem Header="{x:Static properties:Resources.LogSystem}">
                <ScrollViewer>
                    <TreeView  Name="LogBlock" 
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"></TreeView>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

